# ServiceTitan MCP Server — Environment Variables
# Copy this file to .env and fill in your real credentials.
# NEVER commit the .env file — it's in .gitignore.

# ServiceTitan OAuth credentials (from the Developer Portal)
ST_CLIENT_ID=your_client_id_here
ST_CLIENT_SECRET=your_client_secret_here

# ServiceTitan App Key (required header on every API request)
ST_APP_KEY=your_app_key_here

# Your ServiceTitan tenant ID (numeric, visible in your ST URL)
ST_TENANT_ID=your_numeric_tenant_id

# OAuth token endpoint (do not change unless directed by ServiceTitan)
ST_AUTH_URL=https://auth.servicetitan.io/connect/token

# API base URL (do not change unless directed by ServiceTitan)
ST_API_BASE=https://api.servicetitan.io

# Logging (optional — defaults shown)
LOG_LEVEL=INFO
LOG_FILE=logs/mcp_server.log
